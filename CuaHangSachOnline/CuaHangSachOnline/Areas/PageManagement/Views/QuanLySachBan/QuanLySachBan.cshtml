@model IEnumerable<CuaHangSachOnline.Models.DanhSachSachBanResult>

@{
    ViewBag.Title = "QuanLySachBan";
    Layout = "~/Areas/PageManagement/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Sách Bán</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Trang Quản Lý</li>
                    <li class="breadcrumb-item active">Quản Lý Sách Bán</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" onclick="location.href='@Url.Action("ThemSachBan", "QuanLySachBan")'" class="btn btn-success btn-sm">Thêm Mới</button>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                @*<p>
                        @Html.ActionLink("Thêm Mới", "ThemSachThue", new { @class = "btn btn-success btn-sm" })
                    </p>*@
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                Mã Sách
                            </th>
                            <th>
                                Tên Sách
                            </th>
                            <th>
                                Hình Ảnh
                            </th>

                            <th>
                                Năm Xuất Bản
                            </th>
                            <th>
                                Tái Bản
                            </th>
                            <th>
                                Giá Bán
                            </th>
                            <th>
                                Thể Loại
                            </th>
                            <th>
                                Ngôn Ngữ
                            </th>
                            <th>
                                Tác Giả
                            </th>
                            <th>
                                Nhà Xuất Bản
                            </th>
                            <th>
                                Vị Trí
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSach)
                                </td>
                                <td>
                                    <img src="~/Content/images/@item.Image" height="70" width="50" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NamXB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TaiBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiaBan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenLoaiSach)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgonNgu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenTacGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNXB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenViTri)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "SuaSachBan", new { id = item.IDSach }) |
                                    @*@Html.ActionLink("Details", "Details", new { id = item.IDSach }) |*@
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDSach })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>