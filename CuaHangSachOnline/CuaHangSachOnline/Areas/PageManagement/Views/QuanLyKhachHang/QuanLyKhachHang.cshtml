@model IEnumerable<CuaHangSachOnline.Models.AllKhachHangResult>

@{
    ViewBag.Title = "QuanLyKhachHang";
    Layout = "~/Areas/PageManagement/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Khách Hàng</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Trang Quản Lý</li>
                    <li class="breadcrumb-item active">Quản Lý Khách Hàng</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" onclick="location.href='@Url.Action("Create", "QuanLyKhachHang")'" class="btn btn-success btn-sm">Thêm Mới</button>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover text-nowrap">
                <tr>
                    <th>
                        Mã Khách Hàng
                    </th>
                    <th>
                        Họ Tên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Sdt
                    </th>
                    <th>
                        Địa Chỉ
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKhachHang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sdt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id=item.IDKhach}) |
                            @Html.ActionLink("Sửa TK", "EditTKKhachHang", new { id=item.IDKhach}) |
                            @Html.ActionLink("Xóa", "Delete", new { id=item.IDKhach})
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>