@model IEnumerable<CuaHangSachOnline.Models.LoaiSach>

@{
    ViewBag.Title = "QuanLyLoaiSach";
    Layout = "~/Areas/PageManagement/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Loại Sách</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Trang Quản Lý</li>
                    <li class="breadcrumb-item active">Quản Lý Loại Sách</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" onclick="location.href='@Url.Action("ThemLoaiSach", "QuanLyLoaiSach")'" class="btn btn-success btn-sm">Thêm Mới</button>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>
                            Tên Thể Loại
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th>
                            Hình Ảnh
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoaiSach)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                <img src="~/Content/images/@item.Imagels" height="70" width="50" />
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "SuaLoaiSach", new { id = item.IDLoaiSach }) |
                                @*@@*Html.ActionLink("Details", "Details", new { id=item.IDLoaiSach }) |*@
                                @Html.ActionLink("Xóa", "Delete", new { id = item.IDLoaiSach })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
