@model IEnumerable<CuaHangSachOnline.Models.AllViTriResult>

@{
    ViewBag.Title = "ViTriSach";
    Layout = "~/Areas/PageManagement/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Vị Trí Sách</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Trang Quản Lý</li>
                    <li class="breadcrumb-item active">Vị Trí Sách</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" onclick="location.href='@Url.Action("ThemViTri", "ViTriSach")'" class="btn btn-success btn-sm">Thêm Mới</button>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover text-nowrap">
                <tr>
                    <th>
                        Mã Vị Trí
                    </th>
                    <th>
                        Khu
                    </th>
                    <th>
                        Kệ
                    </th>
                    <th>
                        Tầng
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaViTri)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Khu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ke)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tang)
                        </td>

                        <td>
                            @Html.ActionLink("Sửa", "SuaViTri", new { id=item.IDViTri }) |
                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                            @Html.ActionLink("Xóa", "Delete", new { id=item.IDViTri })
                        </td>
                    </tr>
                }

            </table>
            </div>
</div>
</div>