@model IEnumerable<CuaHangSachOnline.Models.AllNHANVIENResult>

@{
    ViewBag.Title = "QuanLyNhanVien";
    Layout = "~/Areas/PageManagement/Views/Shared/_Layout.cshtml";
}



<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản Lý Nhân Viên</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Trang Quản Lý</li>
                    <li class="breadcrumb-item active">Quản Lý Nhân Viên</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" onclick="location.href='@Url.Action("Create", "QuanLyNhanVien")'" class="btn btn-success btn-sm">Thêm Mới</button>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-hover text-nowrap">
                <tr>
                    <th>
                        Mã Nhân Viên
                    </th>
                    <th>
                        Tên Nhân Viên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        NgaySinh
                    </th>
                    <th>
                        Sdt
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaNhanVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenNhanVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @String.Format("{0:dd/MM/yyyy}",item.NgaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sdt)
                        </td>

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDNhanVien }) |
                            @Html.ActionLink("Sửa TK", "EditTkNhanVien", new { id = item.IDNhanVien }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDNhanVien })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
