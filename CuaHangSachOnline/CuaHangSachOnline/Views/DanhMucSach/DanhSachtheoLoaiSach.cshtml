@model List<CuaHangSachOnline.Models.DanhSachtheoLoaiSachResult>

@{
    ViewBag.Title = "DanhSachtheoLoaiSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    Html.RenderAction("RenderMenu", "Home");
}


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2"> Your are here: </div> <!-- col.// -->
                    <nav class="col-md-8">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Home/Index">Home</a></li>
                            @foreach(var item in Model.Take(1))
                            { 
                                <li class="breadcrumb-item"><a href="#">@item.TenLoaiSach</a></li>
                            }
                        </ol>
                    </nav> <!-- col.// -->
                </div> <!-- row.// -->
                <hr>
                <div class="row">
                    <div class="col-md-2">Filter by</div> <!-- col.// -->
                    <div class="col-md-10">
                        <ul class="list-inline">
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Lọc Theo </a>
                                <div class="dropdown-menu p-3" style="max-width:400px;">
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Good supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Best supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> New supplier
                                    </label>
                                </div> <!-- dropdown-menu.// -->
                            </li>
                            <li class="list-inline-item mr-3 dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Ngôn Ngữ </a>
                                <div class="dropdown-menu p-3" style="max-width:400px;">
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Good supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> Best supplier
                                    </label>
                                    <label class="form-check">
                                        <input type="radio" name="myfilter" class="form-check-input"> New supplier
                                    </label>
                                </div> <!-- dropdown-menu.// -->
                            </li>

                            <li class="list-inline-item mr-3">
                                <div class="form-inline">
                                    <label class="mr-2">Price</label>
                                    <input class="form-control form-control-sm" placeholder="Min" type="number">
                                    <span class="px-2"> - </span>
                                    <input class="form-control form-control-sm" placeholder="Max" type="number">
                                    <button type="submit" class="btn btn-sm btn-light ml-2">Ok</button>
                                </div>
                            </li>

                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->

        <header class="mb-3">
            <div class="form-inline">
                <strong class="mr-md-auto">32 Items found </strong>
            </div>
        </header><!-- sect-heading -->

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sách Mua</h4>
        </header>

        <div class="row">
            @foreach (var item in Model.Where(n => n.LoaiSachXem == "buy"))
            {
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                            @*<span class="badge badge-danger"> NEW </span>*@
                            <img src="~/Content/images/@item.Image">v
                        </div> <!-- img-wrap.// -->
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("ThongTinSachMua", "Sach", new {id = item.IDSach})" class="title mb-2">@item.TenSach</a>
                            <div class="price-wrap">
                                <span class="price">@string.Format("{0:#,0}", @item.GiaBan)VND</span>
                                <small class="text-muted">/per item</small>
                            </div> <!-- price-wrap.// -->

                            <p class="mb-2">Sách Mua</p>

                            <p class="text-muted ">@item.TenTacGia</p>

                            <hr>

                            <a href="@Url.Action("ThongTinSachMua", "Sach", new {id = item.IDSach})" class="btn btn-outline-primary"> Xem Chi Tiết </a>
                        </figcaption>
                    </figure>
                </div> <!-- col.// -->

            }

        </div> <!-- row end.// -->


        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sách Thuê</h4>
        </header>
        <div class="row">
            @foreach (var item in Model.Where(n => n.LoaiSachXem == "rental"))
            {
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                            @*<span class="badge badge-danger"> NEW </span>*@
                            <img src="~/Content/images/@item.Image">
                        </div> <!-- img-wrap.// -->
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("ThongTinSachThue", "Sach", new {id = item.IDSach})" class="title mb-2">@item.TenSach</a>
                            <div class="price-wrap">
                                <span class="price">@string.Format("{0:#,0}", @item.GiaThue)VND</span>
                                <small class="text-muted">/per month</small>
                            </div> <!-- price-wrap.// -->

                            <p class="mb-2">Sách Thuê</p>

                            <p class="text-muted ">@item.TenTacGia</p>

                            <hr>

                            <a href="@Url.Action("ThongTinSachThue", "Sach", new {id = item.IDSach})" class="btn btn-outline-primary"> Xem Chi Tiết </a>

                        </figcaption>
                    </figure>
                </div> <!-- col.// -->
            }
        </div> <!-- row end.// -->

        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>




    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
